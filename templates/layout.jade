doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/styles/style.css?v1.0')
      link(rel='stylesheet', href='/css/animate.css')
      link(rel='stylesheet', href='/css/owl.carousel.css')
      //- link(rel='stylesheet', href='/css/owl.theme.css')
      link(rel='stylesheet', href='/css/owl.transitions.css')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
      link(href='http://fonts.googleapis.com/css?family=Lato:300,700,900|Pacifico', rel='stylesheet', type='text/css')
      link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")
      script(src='//use.typekit.net/rsv4pax.js')
      script.
        try{Typekit.load();}catch(e){}


  
  body(class=bodyclass)
    block header
    
    #content
      block content
    
    footer#footer
      .content-wrap
        .row.contact
          .col-sm-9
            h4 Say hi!
            p Don't be shy... if you want to work together or find out more about any of my projects, I'd love to hear from you.

            .detail
              i.fa.fa-paper-plane
              a(href='mailto:hello@amelia-lewis.com') hello@amelia-lewis.com
          
          .col-sm-3.social-media
            a(href='https://www.facebook.com/lewis.amelia', target='_blank')
              i.fa.fa-facebook
            a(href='https://twitter.com/Amelia_Lewis', target='_blank')
              i.fa.fa-twitter
            a(href='http://instagram.com/amelia_lewis', target='_blank')
              i.fa.fa-instagram
            a(href='https://www.pinterest.com/lewisamelia/', target='_blank')
              i.fa.fa-pinterest-p
            a(href='http://meelz-on-wheels.tumblr.com/', target='_blank')
              i.fa.fa-tumblr
            a(href='http://dribbble.com/Amelia_Lewis', target='_blank')
              i.fa.fa-dribbble
            a(href='http://www.linkedin.com/pub/amelia-lewis/44/672/9a1', target='_blank')
              i.fa.fa-linkedin
            a(href='https://github.com/amelia-lewis', target='_blank')
              i.fa.fa-github
      .copyright
        .content-wrap
          .row
            .col-sm-12
              p &copy; #{ new Date().getFullYear() } #{ locals.owner } &ndash; website designed and built by me

    include partials/scripts
