doctype html
block vars
  - var bodyclass = null;

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/styles/style.css?v1.0')
      link(rel='stylesheet', href='/css/animate.css')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
      link(href='http://fonts.googleapis.com/css?family=Lato:300,700,900|Pacifico', rel='stylesheet', type='text/css')
      link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")
      script(src='//use.typekit.net/rsv4pax.js')
      script.
        try{Typekit.load();}catch(e){}


  
  body(class=bodyclass)
    //- block header
    .b-nav
      ul
        li: a.b-link(href=locals.url) Home
        li: a.b-link(href="/projects/meat-cuts") Meat Cuts
