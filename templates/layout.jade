        li: a.b-link(href="/projects/lets-go") Let's Go
        li: a.b-link(href="/projects/jr-cigars") JR Cigars
        li: a.b-link(href="/projects/field-intouch") Field InTouch
        li: a.b-link(href="/projects/rupert-graves") Rupert Graves
        li: a.b-link(href="/projects/shoppernova") ShopperNova
        li: a.b-link(href="/projects/glenda-graff") Glenda Graff
        //- li: a.b-link(href="/projects/ken-khoo") Ken Khoo
