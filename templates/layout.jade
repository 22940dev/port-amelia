doctype html
block vars
  - var bodyclass = null;

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      
      title
        block title
          = locals.name
      
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.0.0/normalize.min.css")
      link(rel="stylesheet" href="https://cdn.jsdelivr.net/flexboxgrid/6.3.0/flexboxgrid.min.css" type="text/css")
      link(rel='stylesheet', href='/styles/style.css?v1.0')
      //- link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
      link(href='https://fonts.googleapis.com/css?family=Abril+Fatface|Lato:100,300,900' rel='stylesheet' type='text/css')
      
      link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")

  body(class=bodyclass)
    //- block header
    include partials/burger
    
    #content
      block content
    
    footer.text-center.bg-dk-grey.block-ver-sm
      p.text-smaller.text-uppercase.text-spaced.text-bold &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; Website designed and built by me

    include partials/scripts
