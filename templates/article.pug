extends layout.pug

block append vars
  - bodyclass = 'article'

block prepend title
  | #{ page.title + " - "}

block content
  article.article    
    section
      .row
        .col-xs-12
          h1= page.title

      .row
        .col-xs-12.col-md-6.col-lg-8
          if page.metadata.tagline
            .block-bot-lg
              p.project-tagline.text-bigger.text-tight= page.metadata.tagline
                
          .article--content.block-bot-xl!= typogr(page.html).typogrify()

        .col-xs-12.col-md-5.col-md-offset-1.col-lg-3.col-lg-offset-1
          .article--info
            if page.metadata.appstorelink || page.metadata.playstorelink || page.metadata.websitelink
              .block-bot-md
                h4.text-grey Link
                if page.metadata.appstorelink
                  p: a.link-highlight(href=page.metadata.appstorelink target="_blank") App Store&nbsp;&nbsp;↗
                if page.metadata.playstorelink
                  p: a.link-highlight(href=page.metadata.playstorelink target="_blank") Google Play Store&nbsp;&nbsp;↗
                if page.metadata.websitelink
                  p: a.link-highlight(href=page.metadata.websitelink target="_blank") Website&nbsp;&nbsp;↗
            
            .block-bot-md
              h4.text-grey Type
              p= page.metadata.type
            
            .block-bot-md
              h4.text-grey Year
              p= moment.utc(page.date).format('YYYY')

            if page.metadata.client
              .block-bot-md
                h4.text-grey Client
                p: a.link-highlight(href=page.metadata.clientlink target="_blank")= page.metadata.client

            if page.metadata.role
              h4.text-grey Role
              p.text-tight= page.metadata.role
