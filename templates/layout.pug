      link(rel="icon", href="/styles/img/favicon-128.png", sizes="128x128")
      link(rel="icon", href="/styles/img/favicon-228.png", sizes="228x228")
      
      //- Android
      link(rel="shortcut icon", sizes="196x196", href="/styles/img/favicon-196.png")
      
      //- iOS
      link(rel="apple-touch-icon", href="/styles/img/favicon-120.png", sizes="120x120")
      link(rel="apple-touch-icon", href="path/to/favicon-152.png", sizes="152x152")
      link(rel="apple-touch-icon", href="path/to/favicon-180.png", sizes="180x180")
      
      //- Windows 8 IE 10
      meta(name="msapplication-TileColor", content="#ffffff")
      meta(name="msapplication-TileImage", content="/styles/img/favicon-144.png")
      meta(name="msapplication-config", content="/styles/img/browserconfig.xml")

