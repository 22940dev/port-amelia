doctype html
block vars
  - var bodyclass = null;

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      
      title
        block title
          = locals.name
      
      link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.0.0/normalize.min.css")
      link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/flexboxgrid/6.3.0/flexboxgrid.min.css")
      link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inconsolata|Libre+Franklin:500|Lora:400,700")
      link(rel="stylesheet" type="text/css" href="/styles/style.css?v1.0")

      //- facebook
      meta(property="og:title", content="Amelia Lewis")
      meta(property="og:type", content="website")
      meta(property="og:url", content="http://amelia-lewis.com/")
      meta(property="og:image", content="http://amelia-lewis.com/styles/img/og-image.jpg")
      meta(property="og:site_name", content="Amelia Lewis")
      meta(property="og:description", content="I'm a product designer currently working on the next generation of editorial tools for The Wall Street Journal. Previously, I designed products and design systems at WeWork and WGSN. I love beautiful products, design systems and well-crafted CSS.")

      //- twitter
      meta(name="twitter:card", content="summary")
      meta(name="twitter:site", content="@amelia_lewis")
      meta(name="twitter:title", content="Amelia Lewis")
      meta(name="twitter:description", content="I'm a product designer currently working on the next generation of editorial tools for The Wall Street Journal. Previously, I designed products and design systems at WeWork and WGSN. I love beautiful products, design systems and well-crafted CSS.")
      meta(name="twitter:image", content="http://amelia-lewis.com/styles/img/og-image.jpg")
            
      //- generics
      link(rel="icon", href="/styles/img/favicon-32.png", sizes="32x32")
