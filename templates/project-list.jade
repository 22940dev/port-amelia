extends layout

block append vars
  - bodyclass = 'project-list'

mixin project-list-item(id, emoji, title, client, description, type, date, comingsoon)
  if comingsoon
    .project-list-item.coming-soon(id=id)
      .project-img(style="background-image: url('/projects/" + id + "/project-tile.jpg')")
      .project-text
        h3= title
        br
        br
        p.text-uppercase.text-smaller.text-spaced.text-tight.text-grey.block-bot-sm
          if client
            span= client
            span &nbsp;&middot;&nbsp;
          span= type
          span &nbsp;&middot;&nbsp;
          span= date
        .dummy-text
          .line
          .line
          .line
          .line
      p.coming-soon-flag Coming Soon

  else
    a.project-list-item(id=id href="/projects/" + id)
      .project-img(style="background-image: url('/projects/" + id + "/project-tile-sm.jpg')")
      .project-text
        h3= title
        br
        br
        p.text-uppercase.text-smaller.text-spaced.text-tight.text-grey.block-bot-sm
          if client
            span= client
            span &nbsp;&middot;&nbsp;
          span= type
          span &nbsp;&middot;&nbsp;
          span= date
        p.text-tight= description

