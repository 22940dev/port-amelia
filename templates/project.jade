extends layout

block append vars
  - bodyclass = 'project-view'

block prepend title
  | #{ page.title + " | "}

block content
  section#project
    //- .header-img(style="background-image: url('" + page.title.replace(/ /g, "-").toLowerCase() + "/project-tile.jpg')")

    .content-wrap
      .row.block-ver-xl
        .col-xs-12
          p.text-uppercase.text-smaller.text-spaced.text-tight.text-grey
            span= page.metadata.type
            span &nbsp;&nbsp;/&nbsp;&nbsp;
            span= page.metadata.date
          h1(data-heading=page.metadata.client)= page.metadata.title
          p.project-tagline.text-bigger.text-tight
            if page.metadata.tagline1
              span= page.metadata.tagline1
            if page.metadata.tagline2
              br
              span= page.metadata.tagline2
            if page.metadata.tagline3
              br
              span= page.metadata.tagline3
          
          if page.metadata.appstorelink || page.metadata.playstorelink || page.metadata.websitelink
            .block-top-md
              if page.metadata.appstorelink
                .block-right-sm.inline-block: a.btn(href="#{page.metadata.appstorelink}" target="_blank") App Store
              if page.metadata.playstorelink
                .block-right-sm.inline-block: a.btn(href="#{page.metadata.playstorelink}" target="_blank") Google Play Store
              if page.metadata.websitelink
                .block-right-sm.inline-block: a.btn(href="#{page.metadata.websitelink}" target="_blank") Website
      
      hr

      .row.block-ver-xl
        .col-xs-12!= typogr(page.html).typogrify()

    .row.border-top
      .content-wrap
        .row
          .col-xs-6.block-ver-lg.border-right
            a.link-highlight.link-back(href="/projects/#{page.metadata.prevproject}")
              span ←
              |  Previous

          .col-xs-6.block-ver-lg.text-right
            a.link-highlight.link-forward(href="/projects/#{page.metadata.nextproject}") Next 
              span →