extends layout

block append vars
  - bodyclass = 'project-view'

block prepend title
  | #{ page.title + " | "}

block content
  section#project
    .header-img(style="background-image: url('" + page.title.replace(/ /g, "-").toLowerCase() + "/project-tile.jpg')")
      .content-wrap
        h1.text-tight.text-white= page.title

    .content-wrap
      //- .row.block-ver-lg
      //-   .col-xs-12
      //-     p.text-uppercase.text-smaller.text-xspaced.text-tight= page.metadata.type
        
      //- hr

      .row.block-ver-xl
        .col-xs-12.col-sm-3
          if page.metadata.clientname
            .block-bot-md
              h4.text-tight Client
              a.highlighted.text-tight(href="#{page.metadata.clientlink}" target="_blank")= page.metadata.clientname

              if page.metadata.clientname2
                br
                a.highlighted.text-tight(href="#{page.metadata.clientlink2}" target="_blank")= page.metadata.clientname2

              if page.metadata.clientname3
                br
                a.highlighted.text-tight(href="#{page.metadata.clientlink3}" target="_blank")= page.metadata.clientname3

          .block-bot-md
            h4.text-tight My Role
            p.text-tight= page.metadata.role1
            p.text-tight= page.metadata.role2

          .block-bot-lg
            h4.text-tight Date
            p.text-tight= page.metadata.date

          .block-bot-lg
            if page.metadata.appstorelink
              .block-bot-xs: a.btn.inline-block(href="#{page.metadata.appstorelink}" target="_blank") App Store
            if page.metadata.playstorelink
              .block-bot-xs: a.btn.inline-block(href="#{page.metadata.playstorelink}" target="_blank") Google Play Store
            if page.metadata.websitelink
              .block-bot-xs: a.btn.inline-block(href="#{page.metadata.websitelink}" target="_blank") Website

        .col-xs-12.col-sm-9!= typogr(page.html).typogrify()