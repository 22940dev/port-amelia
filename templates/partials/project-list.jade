mixin project-list-item(id, title, description, type, date, comingsoon)
  a.project-list-item.border.block-lg(id=id href="/projects/" + id)
    //- .project-img(style="background-image: url('/projects/" + id + "/project-tile.jpg')")
    //- p.text-grey.text-smaller.text-uppercase= type
    p.text-bigger= title
    p.text-grey.text-smaller= description
    p.text-uppercase.text-smaller.text-spaced.text-tight.text-grey= date
    p.highlighted Read more

