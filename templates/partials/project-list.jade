mixin project-list-item(id, title, type, year, team)
  a.project-list-item.block-md(href="/projects/" + id, id=id, class!=attributes.class)
    .row
      .col-xs-12.col-sm-6#project-name
        h4.block-top-sm Project
        p.text-tight.text-bold.text-uppercase.text-spaced
          for letter, i in title.split("")
            span.char(class="char-#{i + 1} delay-#{(i + 1) * 50}")= letter
      .col-xs-4.col-sm-2#project-type
        h4.block-top-sm.delay-100 Type
        p.text-tight.delay-200= type
      .col-xs-4.col-sm-2#project-year
        h4.block-top-sm.delay-200 Year
        p.text-tight.delay-300= year
      if team
        .col-xs-4.col-sm-2#project-team
          h4.block-top-sm.delay-300 Team
          p.text-tight.delay-400= team

