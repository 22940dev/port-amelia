mixin project(link, title, description)
  if link
    a.tile(href=link, class!=attributes.class)
      .overlay
        .overlay-content
          h3
            for letter, i in title.split("")
              span.char(class="char-#{i + 1} delay-#{(i + 1) * 50}")= letter
          p.delay-600= description
  else
    .tile(class!=attributes.class)
      .overlay
        .overlay-content
          h3
            for letter, i in title.split("")
              span.char(class="char-#{i + 1} delay-#{(i + 1) * 50}")= letter
          p.delay-600= description



