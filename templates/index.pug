extends layout.pug

block append vars
  - bodyclass = 'index'

block content
  section.block-ver-xl
    .content-wrap
      .row
        .col-xs-12.col-lg-10
          h1.masthead--intro
            | Amelia Lewis is a product designer currently working on design systems at 
            .link-squiggle
              a(href="http://squarespace.com", target="_blank") Squarespace
              include partials/squiggles/squarespace
            | .
  
  section.block-bot-xl
    .content-wrap
      .row
        .col-xs-12
          each article in articles 
            if article.metadata.featured
              .project-list-item
                .project-list-item--image
                .row
                  .col-xs-12.col-lg-6
                    .link-squiggle
                      a(id=id href=article.url): h3.project-list-item--title= article.title
                      include partials/squiggles/#{id}
                    p.project-list-item--info
                      span= moment.utc(article.date).format('YYYY')
                      if article.metadata.client
                        span &nbsp;&middot;&nbsp;
                        span= article.metadata.client
                  .col-xs-12.col-lg-6
                    p= article.metadata.tagline

  
  section.block-bot-xl
    .content-wrap
      .row
        .col-xs-12
          each article in articles    
            if article.metadata.comingsoon && !article.metadata.featured
              .project-list-item.project-list-item--coming-soon(id=id)
                h3.project-list-item--title= article.title
                p.project-list-item--info
                  span= moment.utc(article.date).format('YYYY')
                  if article.metadata.client
                    span &nbsp;&middot;&nbsp;
                    span= article.metadata.client
                  span &nbsp;&middot;&nbsp;
                  span Case Study Coming Soon

            else if !article.metadata.comingsoon && !article.metadata.featured
              a.project-list-item(id=id href=article.url)
                h3.project-list-item--title= article.title
                p.project-list-item--info
                  span= moment.utc(article.date).format('YYYY')
                  if article.metadata.client
                    span &nbsp;&middot;&nbsp;
                    span= article.metadata.client
